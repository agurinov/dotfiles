" Plugins installed via https://github.com/junegunn/vim-plug
silent! call plug#begin('~/.vim/plugged')

Plug 'scrooloose/nerdtree', { 'on':  'NERDTreeToggle' }
let g:NERDTreeShowHidden=1
let g:NERDTreeQuitOnOpen = 1
let g:NERDTreeAutoDeleteBuffer = 1
let g:NERDTreeMinimalUI = 1
let g:NERDTreeDirArrows = 1
nmap <C-\> :NERDTreeToggle<CR>

Plug 'morhetz/gruvbox'
Plug 'rodjek/vim-puppet'
Plug 'ekalinin/Dockerfile.vim'

Plug 'dense-analysis/ale'
let g:ale_linters_explicit = 1
let g:ale_lint_on_text_changed = 'never'
let g:ale_lint_on_insert_leave = 0
let g:ale_lint_on_enter = 0
let g:ale_lint_on_save = 1
let g:ale_fix_on_save = 1
nmap <C-l>n :ALENext<CR>
nmap <C-l>N :ALEPrevious<CR>
nmap <C-l>l :ALELint<CR>
nmap <C-l>f :ALEFix<CR>

Plug 'editorconfig/editorconfig-vim'
let g:EditorConfig_max_line_indicator = "line"

Plug 'SirVer/ultisnips'
let g:UltiSnipsExpandTrigger="<tab>"

call plug#end()

" Configuration for vim.
set encoding=utf-8

set laststatus=2
set tabstop=4

filetype plugin indent on
syntax on

" Coloscheme settings
set t_Co=256
silent! colorscheme gruvbox
set background=dark

" Line numbers and positioning.
set number
set scrolloff=5
set ruler
set numberwidth=5

" Disable arrow buttons
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
vnoremap <up> <nop>
vnoremap <down> <nop>
vnoremap <left> <nop>
vnoremap <right> <nop>

set nocompatible
set modifiable
set wrap
set linebreak
set autoindent
set smartindent
set backspace=indent,eol,start

" Display extra whitespaces
set list
if has("patch-7.4.710")
	set listchars=tab:»\ ,space:·,trail:·,nbsp:·,eol:¬
else
	set listchars=tab:»\ ,trail:·,nbsp:·,eol:¬
endif

set showcmd

" Search area
set incsearch
set hlsearch
set ignorecase

set nobackup
set noswapfile

set hidden
