set encoding=utf-8

set laststatus=2
set tabstop=4

syntax on
set number

set wrap
set linebreak
set autoindent
set smartindent

" Display extra whitespaces
set list listchars=tab:»·,space:·,trail:·,nbsp:·,eol:¬

set showcmd

" Search area
set incsearch
set hlsearch
set ignorecase

set nobackup
set noswapfile

set hidden

filetype plugin on
